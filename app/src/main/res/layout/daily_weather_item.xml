<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daily_weather_item_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:gravity="left|center"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:textColor="#fad744"
            android:text="Çarşamba Mart 2020 - "
            android:fontFamily="@font/nikoleta">
        </TextView>

        <TextView
            android:id="@+id/daily_weather_item_temp_textView"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center_vertical|end"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:text="23°C"
            android:textColor="#f00"
            android:fontFamily="@font/nikoleta">
        </TextView>

        <ImageView
            android:id="@+id/daily_weather_item_icon_imageView"
            android:layout_gravity="right|center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/cloud_button"></ImageView>

    </LinearLayout>


</androidx.cardview.widget.CardView>